<script type="text/javascript">    
function ShowStockProductSize(p_huohao,factory_id,p_color)
{
    if ($("#layer_stock_product_guige_size_"+p_huohao).is(":visible")==false)
    {
        $("#layer_stock_product_guige_size_"+p_huohao).show();
        $.ajax({
            url:"view-get-stock-size", 
            async: false,
            type: "POST",
            data:{get_stock_guige_huohao:p_huohao,factory_id:factory_id,kucun_color:p_color},
            success: function(html){
                $("#layer_stock_product_guige_size_"+p_huohao).html(html);
            }
        });
    }
    else
    {
        $("#layer_stock_product_guige_size_"+p_huohao).hide();
    }
}
</script>