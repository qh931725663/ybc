<script type="text/javascript">    
function click_page_num_thsj(obj)
{
    set_page_list_thsj(obj);
    refresh_inner("view_sales_cashier?"+$("#form_thsj").serialize() );
}
function set_page_list_thsj(obj)
{
    if (obj.attr("id")=="last"||obj.attr("id")=="next")
    {
        mobj=$("#pages_thsj").find("#m");
        if (obj.attr("id")=="last" && Number(mobj.html())-1>=1){
            var bingo=Number(mobj.html())-1;
            mobj.html(bingo);
            click_page_num_thsj(mobj);
        }
        if (obj.attr("id")=="next" && Number(mobj.html())+1<=page_count_thsj){
            var bingo=Number(mobj.html())+1;
            mobj.html(bingo);
            click_page_num_thsj(mobj);
        }
        return;
    }

    $("#pages_thsj").find("#ll").html("1");
    $("#pages_thsj").find("#rr").html(page_count_thsj);

    var bingo=Number(obj.html());

    $("#page_idx_thsj").attr("value",bingo);

    $("#pages_thsj").find("#m").html(bingo);//中间页码
    $("#pages_thsj").find("#l1").html(bingo-1);//左1页码
    $("#pages_thsj").find("#l2").html(bingo-2);//左2页码
    $("#pages_thsj").find("#r1").html(bingo+1);//右1页码
    $("#pages_thsj").find("#r2").html(bingo+2);//右2页码

    $("#pages_thsj").find(".pagelink").each(function(){
        var num=Number($(this).html())
        if (num<=0||num>page_count_thsj){
            $(this).css("display","none");
        }else{
            $(this).css("display","inline");
        }
    });
}

function search_thsj()
{
    mobj=$("#pages_thsj").find("#m");
    mobj.html(1);
    set_page_list_thsj(mobj);//模拟点击第一页

    refresh_inner("view_sales_cashier?"+$("#form_thsj").serialize() );
}
function click_me_thsj(obj,state)
{
    obj.parent().find(".listtypevalue").removeClass('listtypeselect');
    obj.addClass("listtypeselect");
    
    //重置value
    $('#order_pay_thsj').attr("value","");
    $('#order_temp_thsj').attr("value","");
    $('#order_credit_min_thsj').attr("value","");
    $('#order_credit_max_thsj').attr("value","");

    if (state=="temp")
        $('#order_temp_thsj').attr("value","1");
    if (state=="pay")//暂时未付款订单
    {
        $('#order_pay_thsj').attr("value","0");
        $('#order_credit_min_thsj').attr("value","0");
        $('#order_credit_max_thsj').attr("value","0");
    }
    if (state=="credit")
    {
        $('#order_credit_min_thsj').attr("value","1");
        $('#order_credit_max_thsj').attr("value","");
    }

    search_thsj();
}
</script>
