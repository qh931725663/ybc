    $("#menu_005").click(function () { 
        $('html,body').animate({ scrollTop: 2680 }, 500 ,function(){
        });
    });
    $("#menu_006").click(function () { 
        $('html,body').animate({ scrollTop: 3020 }, 500 ,function(){
        });
    });
    
    $("#p_mob, #p_pwd").keydown(function(event){ 
        if(event.keyCode==13){ 
            $("#btn_pwd_login").click(); 
        } 
    }); 

    //$("#p_mob").focus(function(){
    //    if(this.value=="手机号码或子账号"){this.value=""}
    //    $(this).css("color","#333333");
    //});    
    //    
    //$("#p_mob").blur(function(){
    //    if(this.value==""){this.value="手机号码或子账号"; $(this).css("color","#cccccc")}
    //});
    
   // $("input[name=pwdPrompt]").focus(function () {
       // $("input[name=pwdPrompt]").hide();
      //  $("input[name=var_password]").show().focus();
      //  $("input[name=var_password]").css("color","#333333");
   // });
    
    $("input[name=var_password]").blur(function () {
        //if ($(this).val() == "") {
           // $("input[name=pwdPrompt]").show();
           // $("input[name=var_password]").hide();
       // }
        if(!$("#p_pwd").val() || !$("#p_pwd").val().match(/^[\w]{6,20}$/)){$("#tip_pwd_login").html("请输入正确格式的密码！")} else {$("#tip_pwd_login").html("")}
    }) 
    //登陆成功后检查是否存储用户信息
    var user=window.localStorage.getItem("user");
        if(user){
            var json=JSON.parse(user);
            $("#p_mob").val(json.user);
            $("#p_pwd").val(json.pwd);
    }
    $("#btn_pwd_login").click(function () {     
        if($("#p_mob").val()==""){$("#tip_pwd_login").html("请输入手机号码或子账号！");return false} 
        if(!$("#p_pwd").val() || !$("#p_pwd").val().match(/^[\w]{6,20}$/)){$("#tip_pwd_login").html("请输入正确格式的密码！");return false}
                //TODO 判断用户是否勾选了"记住用户名和密码"
                var isrem = document.getElementById("isrem");
                if(isrem.checked){//TODO 勾选
                    var user = document.getElementById("p_mob").value;
                    var pwd = document.getElementById("p_pwd").value;
                    var json = {
                        "user" : user,
                        "pwd" : pwd
                    }
                    var jsonString = JSON.stringify(json);
                    window.localStorage.setItem('user',jsonString);
                }else{
                 window.localStorage.clear();
                }
        $.ajax({
            url:"postlogin", 
            async: false,
            type: "POST",
            data:{var_password:$("#p_pwd").val(),var_mobile:$("#p_mob").val()},
            dataType:"json",
            success: function(html){
                if (html["state"]=="ok")
                {
                    layer.msg('登录成功！', {time: 2000, icon:1});
                    setTimeout(function(){
                        window.location.href="/myaccount";
                    },2000);
                }
                else
                {
                    $("#tip_pwd_login").html(html["desc"]);
                }
            }
        });        
    });
    
});
