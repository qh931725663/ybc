        url:"get-allproductsbarcode",
        async: false,
        type: "POST",
        data:"",
        dataType:"json",
        success: function(html){
            barcodeprint_gethuohaobyfirstchar=html["char_idx"];
            barcodeprint_getproductdetailbyhuohao=html["product_idx"];
