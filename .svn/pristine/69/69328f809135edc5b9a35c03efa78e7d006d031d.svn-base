<script type="text/javascript">
$(function () {
    if (window.location.protocol != "https:" && (window.location.host=="www.youbaicang.com" || window.location.host=="youbaicang.com"))
        window.location.href = "https:" + window.location.href.substring(window.location.protocol.length);

    $(".shuoming li").hover(function() {
        $(this).addClass("hover");
    },
    function() {
        $(this).removeClass("hover");
    });

    $("input[name=var_password]").blur(function () {
        if(!$("#p_pwd").val() || !$("#p_pwd").val().match(/^[\w]{6,20}$/)){$("#tip_pwd_login").html("请输入正确格式的密码！")} else {$("#tip_pwd_login").html("")}
    })
    //登陆成功后检查是否存储用户信息
    var user=window.localStorage.getItem("user");
        if(user){
            var json=JSON.parse(user);
            $("#p_mob").val(json.user);
            $("#p_pwd").val(json.pwd);
    }
    $("#btn_pwd_login").click(function () {
        if($("#p_mob").val()==""){$("#tip_pwd_login").html("请输入手机号码或子账号！");return false}
        if(!$("#p_pwd").val() || !$("#p_pwd").val().match(/^[\w]{6,20}$/)){$("#tip_pwd_login").html("请输入正确格式的密码！");return false}
                //TODO 判断用户是否勾选了"记住用户名和密码"
                var isrem = document.getElementById("isrem");
                if(isrem.checked){//TODO 勾选
                    var user = document.getElementById("p_mob").value;
                    var pwd = document.getElementById("p_pwd").value;
                    var json = {
                        "user" : user,
                        "pwd" : pwd
                    }
                    var jsonString = JSON.stringify(json);
                    window.localStorage.setItem('user',jsonString);
                }else{
                 window.localStorage.clear();
                }
        $.ajax({
            url:"postlogin",
            async: false,
            type: "POST",
            data:{var_password:$("#p_pwd").val(),var_mobile:$("#p_mob").val()},
            dataType:"json",
            success: function(html){
                if (html["state"]=="ok")
                {
                    layer.msg('登录成功！', {time: 2000, icon:1});
                    setTimeout(function(){
                        window.location.href="/myaccount";
                    },2000);
                }
                else
                {
                    $("#tip_pwd_login").html(html["desc"]);
                }
            }
        });
    });

});

function ShowOptPlay(opt_id)
{
    $.ajax({
        url:"view-get-index-opt-play",
        async: false,
        type: "POST",
        data:{var_opt_id:opt_id},
        success: function(html){
            $('#layer_show_opt_play').html(html);
        }
    });

    index_layer_show_opt_play=layer.open({
        shade: [0.9, '#000000'],
        type: 1,
        area: ['995px', '630px'],
        title: false,
        content:$('#layer_show_opt_play')
    });

}

function LinkExperienceAccount(experience_account)
{
    $.ajax({
        url:"postlogin",
        async: false,
        type: "POST",
        data:{var_experience_account:experience_account},
        dataType:"json",
        success: function(html){
            if (html["state"]=="ok")
            {
                window.location.href="/myaccount";
            }
        }
    });
}
</script>

