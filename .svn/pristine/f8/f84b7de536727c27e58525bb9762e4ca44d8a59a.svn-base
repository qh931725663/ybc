					<input type="text" id="pwdPrompt" name="pwdPrompt" value="请输入新密码" style="width:250px; padding-top:3px; height:13px; color:#cccccc; background:#fafafa; border:0;"/>
					<input type="password" id="r_pwd" name="r_pwd" style="width:190px; padding-top:3px; height:13px; color:#cccccc; background:#fafafa; border:0; display:none"/> 
